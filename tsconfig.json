{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@share": ["src/lib_share"],
      "@share/*": ["src/lib_share/*"],
      "@db": ["src/lib_db"],
      "@db/*": ["src/lib_db/*"]
    }
  }
}
